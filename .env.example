# =============================================================================
# DOCUAI - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git (it contains secrets!)
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# AZURE OPENAI CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from: https://portal.azure.com -> Azure OpenAI Service
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# -----------------------------------------------------------------------------
# AZURE DOCUMENT INTELLIGENCE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from: https://portal.azure.com -> Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# -----------------------------------------------------------------------------
# PHOENIX AI TRACING CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from: https://app.phoenix.arize.com
PHOENIX_API_KEY=your-phoenix-api-key
PHOENIX_CLIENT_HEADERS=api_key=your-phoenix-api-key
PHOENIX_COLLECTOR_ENDPOINT=https://app.phoenix.arize.com

# -----------------------------------------------------------------------------
# CREWAI CONFIGURATION
# -----------------------------------------------------------------------------
# Disable CrewAI telemetry to prevent interactive prompts
CREWAI_TELEMETRY_OPT_OUT=true

# -----------------------------------------------------------------------------
# BACKEND SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Generate a secure random string (min 32 characters)
# You can use: openssl rand -hex 32
SECRET_KEY=your-secret-key-at-least-32-characters-long-here

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated list for production)
# Development: ["http://localhost:8501"]
# Production: ["https://yourdomain.com"]
BACKEND_CORS_ORIGINS=["http://localhost:8501"]

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# Backend API URL
# Development: http://127.0.0.1:8000
# Production: https://your-backend-domain.com
API_BASE_URL=http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# OPTIONAL: DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable debug mode (set to false in production)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 1. Never commit the .env file to version control
# 2. Add .env to .gitignore
# 3. Use strong, unique values for SECRET_KEY
# 4. Rotate API keys regularly
# 5. Use environment variables in production (not .env files)
# 6. Keep service role keys secure - they bypass RLS!
